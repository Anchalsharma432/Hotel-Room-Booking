@model HospitalityProject.Models.Room

<h2>Delete Room</h2>

<h4>Are you sure you want to delete this room?</h4>
<div>
    <strong>Room Number:</strong> @Model.RoomNumber<br />
    <strong>Capacity:</strong> @Model.Capacity<br />
    <strong>Room Type:</strong> @Model.RoomType<br />
    <strong>Price Per Night:</strong> @Model.PricePerNight<br />
    <strong>Room Description:</strong> @Model.RoomDescription<br />
    <strong>Is Available:</strong> @Model.IsAvailable<br /><br />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="RoomId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
