@model HospitalityProject.Models.Room

@Html.AntiForgeryToken()
<style>
    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #2c3e50;
    }

    form {
        max-width: 600px;
        margin: 0 auto;
        background: #f9f9f9;
        padding: 25px 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #333;
    }

    input.form-control {
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #ccc;
        font-size: 16px;
        width: 100%;
    }

        input.form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 4px rgba(0, 123, 255, 0.3);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<h2>Edit Room</h2>

<form asp-action="Edit" asp-route-id="@Model.RoomId" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RoomId" />
    <div class="form-group">
        <label asp-for="RoomNumber">Room Number</label>
        <input asp-for="RoomNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomType">Room Type</label>
        <input asp-for="RoomType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Capacity">Capacity</label>
        <input asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PricePerNight">Price Per Night</label>
        <input asp-for="PricePerNight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomDescription">Room Description</label>
        <input asp-for="RoomDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable">Is Available</label>
        <input asp-for="IsAvailable" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
