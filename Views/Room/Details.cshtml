@model HospitalityProject.Models.Room

<h2>Room Details</h2>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Room Number</dt>
        <dd class="col-sm-10">@Model.RoomNumber</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Room Type</dt>
        <dd class="col-sm-10">@Model.RoomType</dd>

        <dt class="col-sm-2">Room Description</dt>
        <dd class="col-sm-10">@Model.RoomDescription</dd>

        <dt class="col-sm-2">Price Per Night</dt>
        <dd class="col-sm-10">@Model.PricePerNight</dd>

        <dt class="col-sm-2">Is Available</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>

    </dl>
</div>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
