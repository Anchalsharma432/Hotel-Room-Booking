<script>
    document.addEventListener('DOMContentLoaded', function () {
        const fader = document.querySelector('.full-width-fader');
        if (fader) {
            const slides = fader.querySelectorAll('.fader-slide');
            let currentSlide = 0;

            if (slides.length > 0) {
                const nextSlide = () => {
                    slides[currentSlide].classList.remove('active');
                    currentSlide = (currentSlide + 1) % slides.length;
                    slides[currentSlide].classList.add('active');
                };

                // Change image every 4 seconds (4000 milliseconds)
                setInterval(nextSlide, 4000);
            }
        }

        // --- Gallery Modal Logic ---
        const galleryCarousel = document.getElementById('galleryCarousel');
        if (galleryCarousel) {
            const thumbnails = document.querySelectorAll('.gallery-thumb');

            // Function to update the active thumbnail
            const updateActiveThumbnail = (index) => {
                thumbnails.forEach(thumb => thumb.classList.remove('active'));
                if (thumbnails[index]) {
                    thumbnails[index].classList.add('active');
                }
            };

            // Listen for the carousel to slide and update the thumbnail
            galleryCarousel.addEventListener('slide.bs.carousel', function (event) {
                updateActiveThumbnail(event.to);
            });
        }
    });
</script>
