<script>
    document.addEventListener('DOMContentLoaded', function () {
        // --- Infinite Sliding Carousel Logic ---
        const fader = document.querySelector('.full-width-fader');
        if (fader) {
            const track = fader.querySelector('.fader-track');
            let slides = Array.from(track.children);
            const nextButton = fader.querySelector('.fader-control.next');
            const prevButton = fader.querySelector('.fader-control.prev');

            if (slides.length > 1) {
                const firstClone = slides[0].cloneNode(true);
                const lastClone = slides[slides.length - 1].cloneNode(true);

                firstClone.setAttribute('aria-hidden', 'true');
                lastClone.setAttribute('aria-hidden', 'true');

                track.appendChild(firstClone);
                track.insertBefore(lastClone, slides[0]);

                slides = Array.from(track.children);

                let currentIndex = 1;
                let isAnimating = false;
                const slideWidth = () => slides[0].getBoundingClientRect().width;

                // Set initial position without any animation
                track.style.transition = 'none';
                track.style.transform = `translateX(-${currentIndex * slideWidth()}px)`;

                // Use a tiny timeout to re-enable transitions after the initial positioning is done.
                // This ensures the browser has rendered the start position before transitions are active.
                setTimeout(() => {
                    track.style.transition = 'transform 0.6s ease-in-out';
                }, 10);

                nextButton.addEventListener('click', () => {
                    if (isAnimating) return;
                    isAnimating = true;
                    currentIndex++;
                    track.style.transform = `translateX(-${currentIndex * slideWidth()}px)`;
                });

                prevButton.addEventListener('click', () => {
                    if (isAnimating) return;
                    isAnimating = true;
                    currentIndex--;
                    track.style.transform = `translateX(-${currentIndex * slideWidth()}px)`;
                });

                track.addEventListener('transitionend', () => {
                    isAnimating = false;
                    if (currentIndex >= slides.length - 1) {
                        currentIndex = 1;
                        track.style.transition = 'none';
                        track.style.transform = `translateX(-${currentIndex * slideWidth()}px)`;
                        // We need to re-enable transitions after the jump
                        setTimeout(() => {
                            track.style.transition = 'transform 0.6s ease-in-out';
                        }, 10);
                    }
                    if (currentIndex <= 0) {
                        currentIndex = slides.length - 2;
                        track.style.transition = 'none';
                        track.style.transform = `translateX(-${currentIndex * slideWidth()}px)`;
                        // We need to re-enable transitions after the jump
                        setTimeout(() => {
                            track.style.transition = 'transform 0.6s ease-in-out';
                        }, 10);
                    }
                });

                window.addEventListener('resize', () => {
                    track.style.transition = 'none';
                    track.style.transform = `translateX(-${currentIndex * slideWidth()}px)`;
                    setTimeout(() => {
                        track.style.transition = 'transform 0.6s ease-in-out';
                    }, 10);
                });
            }
        }
    });
</script>
