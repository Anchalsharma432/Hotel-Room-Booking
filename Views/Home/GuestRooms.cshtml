            flex-grow: 1; /* Allows content to fill available space */
        }

        .feature-card-title {
            font-size: 1.4rem;
            margin: 0 0 5px 0;
            color: #009ca6;
            font-size: 25px;
            text-align: center;
        }

        .feature-card-subtitle {
            font-size: 22px;
            color: #555;
            margin: 0 0 15px 0;
            font-weight: normal;
            text-align: center;
        }

        .feature-card-body {
            font-size: 1rem;
            line-height: 1.6;
            color: #333;
            flex-grow: 1; /* Pushes the button to the bottom */
            margin-bottom: 20px;
        }

        /* --- Footer carousel --- */

        /* Main carousel container */
        .full-width-fader {
            position: relative;
            height: 75vh;
            overflow: hidden; /* This is important to hide the other slides*/
            background-color: #333;
            width: 100vw !important;
            left: 50%;
            transform: translateX(-50%);
        }

        /* The track that holds and moves the slides */
        .fader-track {
            display: flex; /* Aligns slides horizontally */
            height: 100%;
        }

        /* Styles for each slide */
        .fader-slide {
            width: 100vw; /* Each slide takes the full viewport width */
            height: 100%;
            object-fit: cover;
            flex-shrink: 0; /* Prevents slides from shrinking */
        }

        /* Styles for the navigation controls */
        .fader-control {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 15; /* Ensure buttons are on top of images */
            background-color: rgba(0, 0, 0, 0.4);
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 24px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .fader-control:hover {
                background-color: rgba(0, 0, 0, 0.7);
            }

            .fader-control.prev {
                left: 20px;
            }

            .fader-control.next {
                right: 20px;
            }
    </style>
</head>
