            <img src="https://plus.unsplash.com/premium_photo-1679430887921-31e1047e5b55" alt="Carousel image 10" class="fader-slide">
        </div>

        <button class="fader-control prev" aria-label="Previous Slide">&#10094;</button>
        <button class="fader-control next" aria-label="Next Slide">&#10095;</button>
    </section>

    <!-- Booking Form Section -->
    <div class="container form-section">
        <form class="row g-3 justify-content-center" asp-controller="Booking" asp-action="Create">
            <div class="col-md-4">
                <label for="checkInDate" class="form-label">Check-In Date</label>
                <input type="date" class="form-control" id="checkInDate" name="checkInDate" required />
            </div>
            <div class="col-md-4">
                <label for="checkOutDate" class="form-label">Check-Out Date</label>
                <input type="date" class="form-control" id="checkOutDate" name="checkOutDate" required />
            </div>
            <div class="col-md-4 text-center">
                @* <a href="/Booking/Create" class="btn btn-primary btn-lg mt-3">Book Now</a> *@
                <button type="submit" asp-controller="Booking" asp-action="Create" class="btn btn-primary btn-lg mt-3">Book Now</button>
            </div>
        </form>
    </div>

    <!-- Sticky Footer -->
    <footer class="sticky-footer">
        <p>&copy; @DateTime.Now.Year Hotel Booking Project | Built with ❤️ by Anjali, Anchal and Alex</p>
    </footer>

    <div class="modal fade" id="galleryModal" tabindex="-1" aria-labelledby="galleryModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="galleryModalLabel">Our Gallery</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
