        /* Right Column: Image Carousel */
        .feature-image-carousel {
            flex: 1;
            max-width: 500px;
            min-width: 300px;
            height: 450px;
            position: relative;
            overflow: hidden;
            border-radius: 8px;
        }

        .carousel-slide {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

            .carousel-slide.active {
                opacity: 1;
            }


        /* --- New Static Image Feature Section --- */

        /* Main container for the new section */
        .static-image-section {
            display: flex; /* Arranges text and image side-by-side */
            align-items: center; /* Vertically centers the content */
            justify-content: center; /* Horizontally centers the items */
            gap: 50px; /* Space between the text and image */
            padding: 80px 20px; /* Spacing around the entire section */
            flex-wrap: wrap-reverse; /* Allows items to stack on smaller screens, with image on top */
            background-color: #fff; 
        }

        /* Text container with no background */
        .static-image-text {
            flex: 1; /* Allows the text block to be flexible */
            max-width: 500px; /* Prevents the text from becoming too wide */
            min-width: 300px;
        }

            .static-image-text h2 {
                font-size: 2.5rem;
                color: #009ca6; 
                margin-bottom: 20px;
            }

            .static-image-text p {
                font-size: 1.1rem;
                line-height: 1.7;
                margin-bottom: 30px;
            }

        /* Image container wrapper */
        .static-image-wrapper {
            /* Set specific dimensions: 50% of viewport width for both width and height */
            width: 50vw;
            height: 50vw;
            max-width: 600px; /* Optional: prevents the image from becoming excessively large on huge screens */
            max-height: 600px; /* Optional: matches the max-width */
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

            /* The actual image inside the wrapper */
            .static-image-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Fills the container without stretching/distorting the image */
                transition: transform 0.4s ease-in-out; /* Smooth transition for the zoom */
            }

            /* The zoom effect on hover */
            .static-image-wrapper:hover img {
                transform: scale(1.1); /* Zooms the image to 110% of its size */
            }

    </style>
</head>
