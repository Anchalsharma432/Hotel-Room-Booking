<!DOCTYPE html>
<script>
    document.addEventListener('DOMContentLoaded', function() {
          // Find all carousel containers on the page
          const carousels = document.querySelectorAll('.feature-image-carousel');

          // Loop through each carousel and treat it as a separate component
          carousels.forEach(carousel => {
                // Get the slides ONLY from the current carousel in the loop
                const slides = carousel.querySelectorAll('.carousel-slide');
                let currentSlide = 0;

                // If there are slides inside, start the carousel
                if (slides.length > 0) {
                      // Make the first slide visible immediately
                      slides[0].classList.add('active');

                      // Function to show the next slide for THIS carousel
                      const nextSlide = () => {
                            // Remove 'active' from the current slide
                            slides[currentSlide].classList.remove('active');

                            // Move to the next slide, looping back to 0 if at the end
                            currentSlide = (currentSlide + 1) % slides.length;

                            // Add 'active' to the new current slide
                            slides[currentSlide].classList.add('active');
                      };

                      // Set a separate timer for this specific carousel
                      setInterval(nextSlide, 4000);
                }
          });
    });
</script>
