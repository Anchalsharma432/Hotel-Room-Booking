@model IEnumerable<HospitalityProject.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2 class="mb-4 text-center">Booking Management</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Create New Booking</a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Guest: @item.GuestName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Room #@item.RoomId</h6>

                    <p class="card-text">
                        <strong>Email:</strong> @item.Email<br />
                        <strong>Phone:</strong> @item.PhoneNumber<br />
                        <strong>Check-In:</strong> @item.CheckInDate.ToShortDateString()<br />
                        <strong>Check-Out:</strong> @item.CheckOutDate.ToShortDateString()<br />
                        <strong>Total Price:</strong> $@item.TotalPrice
                    </p>

                    <p>
                        <strong>Status:</strong>
                        @if (item.Status?.ToLower() == "confirmed")
                        {
                            <span class="badge bg-success">Confirmed</span>
                        }
                        else if (item.Status?.ToLower() == "cancelled")
                        {
                            <span class="badge bg-danger">Cancelled</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.Status</span>
                        }
                    </p>
                </div>
                <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
