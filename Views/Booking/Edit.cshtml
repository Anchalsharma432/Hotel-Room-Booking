@model HospitalityProject.Models.Booking
<style>
    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #2c3e50;
    }

    form {
        max-width: 600px;
        margin: 0 auto;
        background: #f9f9f9;
        padding: 25px 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #333;
    }

    input.form-control {
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #ccc;
        font-size: 16px;
        width: 100%;
    }

    input.form-control:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 4px rgba(0, 123, 255, 0.3);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
<h2>Edit Booking</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="BookingId" />
    <div class="form-group">
        <label asp-for="GuestName"></label>
        <input asp-for="GuestName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomId"></label>
        <input asp-for="RoomId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumberOfGuests">Number Of Guests</label>
        <input asp-for="NumberOfGuests" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CheckInDate"></label>
        <input asp-for="CheckInDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CheckOutDate"></label>
        <input asp-for="CheckOutDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
