@model HospitalityProject.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4 rounded-3">
                <h2 class="text-center mb-4 text-primary">Create Your Account</h2>

                <form asp-action="Register" method="post">
                    <div class="row">
                        <!-- First Name -->
                        <div class="col-md-6 mb-3">
                            <label for="FirstName" class="form-label fw-bold">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="col-md-6 mb-3">
                            <label for="LastName" class="form-label fw-bold">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Phone -->
                    <div class="mb-3">
                        <label for="Phone" class="form-label fw-bold">Phone Number</label>
                        <input asp-for="Phone" class="form-control" placeholder="+1 234 567 890" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <!-- Username -->
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold"></label>
                        <input asp-for="Username" class="form-control" placeholder="Choose a username" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <!-- Password -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="col-md-6 mb-3">
                            <label for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Re-enter password" required />
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                    </div>

                    <div class="text-center">
                        <p>Already have an account? <a href="/Account/Login" class="text-decoration-none">Login here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #009ca6;
        border-color: #009ca6;
    }

        .btn-primary:hover {
            background-color: #007b80;
        }

    .text-primary {
        color: #009ca6 !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
