@model HospitalityProject.Models.Guest

@{
    ViewData["Title"] = "Delete Guest";
}

<h2>Delete Confirmation</h2>

<h4>Are you sure you want to delete this Guest?</h4>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="GuestId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>